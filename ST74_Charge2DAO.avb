Sub AddRowToTrans(ByRef TrLstTo, EntID, FUnitID, AccID, AgID, Qty, ByRef DicSeries, SeriesID, RowSum)
	Dim RowNo, aData

	If TrLstTo.Item(TrLstTo.Rows).EntID <> 0 Then
		RowNo = TrLstTo.Rows + 1
	Else
		RowNo = TrLstTo.Rows
	End If

	With TrLstTo.Item(RowNo)
		.EntID = EntID
		.FUnitID = FUnitID
		.Qty = Qty
		.Sum = RowSum
		' единица измерения
		.AccCrId = AccID
		.AgFromId = AgID
		.SeriesID = SeriesID

		If .Params.Exists("Код") Then
			If .SeriesBind.Code = "" Then
				.Params("Код").Value = .EntBind.Bar
			Else
				.Params("Код").Value = .SeriesBind.Code
			End If
		End If

	End With

	If SeriesID <> 0 Then 
		aData = DicSeries.Item(SeriesID)
		aData(0) = aData(0) - Qty
		aData(1) = aData(1) - RowSum
		DicSeries.Item(SeriesID) = aData
	End If
End Sub

