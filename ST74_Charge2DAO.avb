Function CopyQty(TrFrom, ByRef TrTo)
	Dim i, TrFromParams

	CopyQty = True

	With TrTo.Item(TrFrom.RowNo2)
		.FUnitID = TrFrom.FUnitID
		.Qty = TrFrom.Qty

		Set TrFromParams = TrFrom.Params

		With .Params
			For i = 1 To .Count
				.Item(i).Value = TrFromParams.Item(i).Value2
			Next
		End With

	End With
End Function 
