Sub SetupAssistant(Kind, KindID)
	Dim HTMLPages

	HTMLPages = Array("folders.htm", "accounts.htm", "agents.htm", "entities.htm", "miscs.htm", "binders.htm", "templates.htm")

	If (Kind - 1) <= UBound(HTMLPages) Then
		With WorkArea.Assistant
			If .Visible Then 
