Function IsCanDelete(Kind, KindID)
	Dim aCommand
	Dim TmlCashe

	Set TmlCashe = WorkArea.Map.Item("TmlCashe")

	If Kind > 4 Then 
		IsCanDelete = 0
	Else
		aCommand = Array("", "SetFolder", "SetAcc", "SetAg", "SetEnt")
		IsCanDelete = SearchKindInTemplate(TmlCashe, Kind, KindID, UCase(aCommand(Kind)))
	End If

End Function
