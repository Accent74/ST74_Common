Function IsUserInGroup(ByRef GroupName)
	Dim i, aGroups

	aGroups = workarea.UserGroups

	If UBound(aGroups) = -1 Then
		IsUserInGroup = True
		Exit Function
	End If

	GroupName = UCase(GroupName)

	For i = 0 To UBound(aGroups)
		If GroupName = UCase(aGroups(i)) Then
			IsUserInGroup = True
			Exit Function
		End If
	Next

	IsUserInGroup = False

End Function
